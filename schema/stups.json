{
  "title": "STUPS - Cheat sheet",
  "url": "https://github.com/zalando-stups",
  "elements": [
  {
      "title": "Installation",
      "keys": [
        {
          "key": "sudo pip3 install --upgrade stups",
          "value": "Install or update all STUPS tools"
        }
      ]
    },
    {
      "title": "Pierone",
      "keys": [
        {
          "key": "pierone login",
          "value": "Login to pierone"
        }
      ]
    },
    {
      "title": "Mai",
      "keys": [
        {
          "key": "mai",
          "value": "Authentication with default profile"
        }
      ]
    },
    {
      "title": "Senza - init",
      "keys": [
        {
          "key": "senza init myapp.yaml",
          "value": "Bootstrap senza definition"
        }
      ]
    },
    {
      "title": "Senza - create",
      "keys": [
        {
          "key": "senza create myapp.yaml 1 0.1-SNAPSHOT",
          "value": "Create a Cloud Formation stack from the senza definition file"
        },
        {
          "key": "senza create --disable-rollback myerroneous-stack.yaml 1",
          "value": "You can disable the automatic Cloud Formation rollback-on-failure in order to do ‘post-mortem’ debugging"
        }
      ]
    },
    {
      "title": "Senza - list",
      "keys": [
        {
          "key": "senza list myapp.yaml",
          "value": "List only active stacks for myapp"
        },
        {
          "key": "senza list myapp.yaml --all",
          "value": "List stacks for myapp (also deleted ones)"
        },
        {
          "key": "senza list",
          "value": "List all active stacks"
        },
        {
          "key": "senza list --all",
          "value": "List all stacks (including deleted ones)"
        },
        {
          "key": "senza resources myapp.yaml 1",
          "value": "List all CF resources"
        },
        {
          "key": "senza events myapp.yaml 1",
          "value": "List all CF events"
        },
        {
          "key": "senza instances myapp.yaml 1",
          "value": "List EC2 instances and IPs"
        },
        {
          "key": "senza images",
          "value": "List all available Taupage AMIs"
        }
      ]
    },
    {
      "title": "Senza - console",
      "keys": [
        {
          "key": "senza console myapp.yaml 1",
          "value": "Get EC2 console output for all stack instances"
        },
        {
          "key": "senza console 172.31.1.2",
          "value": "Get EC2 console output for single instance"
        }
      ]
    },
    {
      "title": "Senza - traffic",
      "keys": [
        {
          "key": "senza traffic myapp.yaml",
          "value": "Show traffic distribution"
        },
        {
          "key": "senza traffic myapp.yaml 2 50",
          "value": "Give version 2 50% of traffic"
        }
      ]
    },
    {
      "title": "Senza - delete",
      "keys": [
        {
          "key": "senza delete myapp.yaml 1",
          "value": "Delete a stack"
        }
      ]
    },
    {
      "title": "Zign",
      "keys": [
        {
          "key": "zign token",
          "value": "To get a new token"
        }
      ]
    },
      {
      "title": "Taupage Log Files",
      "keys": [
        {
          "key": "/var/log/syslog",
          "value": "Contains the logs about taupage init process until the start of the docker container"
        },
        {
          "key": "/var/log/application.log",
          "value": "Contains the stdout of the docker container"
        }
      ]
    }
  ]
}